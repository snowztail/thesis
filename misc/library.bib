	issue     = {5},
	journal   = {IEEE Transactions on Communications},
	keywords  = {6G,index modulation (IM),reconfigurable intelligent surface (RIS),smart reflect-array,software-defined surface,space shift keying (SSK),spatial modulation (SM)},
