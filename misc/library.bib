	issue     = {2},
	journal   = {IEEE Internet of Things Journal},
	keywords  = {Cooperative ambient backscatter communication (CAB,Cooperative receiver,Maximum-likelihood (ML) detection,Multi-antenna systems,Orthogonal frequency division multiplexing (OFDM),Performance analysis,Successive interference cancellation (SIC),cooperative receiver,maximum-likelihood (ML) detection,orthogonal frequency division multiplexing (OFDM),successive interference cancellation (SIC)},
	month     = {Apr},
