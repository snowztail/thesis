	journal  = {IEEE Transactions on Cognitive Communications and Networking},
	keywords = {Ambient backscattering communications,Cognitive radio,Energy efficiency,Joint decoding,Large intelligent antennas,Reconfigurable intelligent surfaces,Spectrum efficiency,Spectrum management,Symbiotic radio,ambient backscattering communications,cognitive radio,energy efficiency,joint decoding,large intelligent antennas,reconfigurable intelligent surfaces,spectrum efficiency,spectrum management},
