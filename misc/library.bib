	journal  = {IEEE Internet of Things Journal},
	keywords = {Backscatter,Internet of Things,Meters,Power demand,Radio frequency,Sensitivity,Sensors,backscatter communication (BC),chirp spread spectrum (CSS),passive Internet of Things (IoT) device,radio frequency energy harvesting (RFEH),ultra-low power (ULP).},
	month    = sep,
	number   = {17},
	pages    = {13737--13749},
	title    = {Self-sustainable Long Range Backscattering Communication Using {RF} Energy Harvesting},
